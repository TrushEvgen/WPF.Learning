<Window x:Class="WPF.Learning.StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Learning.StackPanel"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <StackPanel Margin="8" >
        <Label>Контактная информация</Label>
        <Label>Логин:</Label>
        <TextBox MaxWidth="250" MinWidth="150" HorizontalAlignment="Left"></TextBox>
        <Label Margin="0,0,25,0">Пароль:</Label>
        <TextBox x:Name="textBoxText" Margin="0,0,0,0" MaxWidth="350" MinWidth="150" HorizontalAlignment="Left"/>
        <Button Margin="20" MaxWidth="220" HorizontalAlignment="Stretch" MinWidth="100" Content="Отправить"></Button>
    </StackPanel>
</Window>
